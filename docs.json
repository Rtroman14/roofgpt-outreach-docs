{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "Cold Email Outreach System",
    "colors": {
        "primary": "#3DCF8E",
        "light": "#07C983",
        "dark": "#15803D"
    },
    "favicon": "/favicon.svg",
    "navigation": {
        "tabs": [
            {
                "tab": "Setup",
                "groups": [
                    {
                        "group": "Start here",
                        "pages": [
                            "index",
                            "setup/email-setup",
                            "setup/instantly-setup",
                            "setup/campaigns-best-practices",
                            "setup/leads-airtable",
                            "setup/launch"
                        ]
                    }
                ]
            },
            {
                "tab": "Run",
                "groups": [
                    {
                        "group": "Operations",
                        "pages": ["run/daily-checklist", "run/weekly-tuneup"]
                    }
                ]
            },
            {
                "tab": "Fix",
                "groups": [
                    {
                        "group": "Troubleshooting",
                        "pages": ["fix/email-problems", "fix/performance-problems"]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "Documentation",
                    "href": "https://mintlify.com/docs",
                    "icon": "book-open-cover"
                },
                {
                    "anchor": "Blog",
                    "href": "https://mintlify.com/blog",
                    "icon": "newspaper"
                }
            ]
        }
    },
    "logo": {
        "light": "/logo/roofgpt-light.svg",
        "dark": "/logo/roofgpt-dark.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:ryan@roofgpt.ai"
            }
        ]
    },
    "contextual": {
        "options": ["copy", "view", "chatgpt"]
    },
    "appearance": {
        "default": "light"
    },
    "footer": {
        "socials": {
            "facebook": "https://www.facebook.com/roofgpt",
            "linkedin": "https://www.linkedin.com/company/roofgpt"
        }
    }
}
